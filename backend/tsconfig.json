{
  "compilerOptions": {
    "target": "ES2020", // Kompiluje do ES2020
    "module": "commonjs", // Używa systemu modułów CommonJS
    "rootDir": "src", // Główny katalog źródłowy
    "outDir": "dist", // Katalog wyjściowy dla skompilowanego JavaScript
    "strict": true, // Włącza wszystkie opcje ścisłego sprawdzania typów
    "moduleResolution": "node", // Sposób rozwiązywania modułów
    "esModuleInterop": true, // Umożliwia importowanie modułów CommonJS
    "skipLibCheck": true, // Pomija sprawdzanie typów w plikach deklaracji
    "forceConsistentCasingInFileNames": true, // Wymusza spójność wielkości liter w nazwach plików
    "resolveJsonModule": true, // Pozwala na importowanie plików JSON
    "noEmitOnError": true, // Nie emituje plików, jeśli wystąpiły błędy
    "noImplicitAny": true, // Nie pozwala na użycie typu `any` bez deklaracji
    "sourceMap": true, // Generuje pliki map dla debugowania
    "types": ["node", "jest"] // Typy globalne dla Node.js i Jest
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
